{
	"name": "diary",
	"version": "0.0.3",
	"description": "A fast client logging framework",
	"keywords": [
		"fast",
		"logging",
		"logger",
		"utility"
	],
	"repository": "maraisr/diary",
	"license": "MIT",
	"author": {
		"name": "Marais Rossouw",
		"email": "me@marais.dev",
		"url": "https://marais.io"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./lib/index.mjs",
			"require": "./lib/index.js"
		}
	},
	"main": "lib/index.js",
	"unpkg": "lib/index.min.js",
	"module": "lib/index.mjs",
	"types": "index.d.ts",
	"files": [
		"*.d.ts",
		"types",
		"browser",
		"node"
	],
	"scripts": {
		"build": "rollup -c",
		"format": "prettier  --write --list-different \"{*,.github/**/*}.+(json|yml|md)\"",
		"prepublishOnly": "yarn build",
		"test": "uvu -r ts-node/register test",
		"typecheck": "tsc --noEmit"
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"devDependencies": {
		"@marais/tsconfig": "0.0.1",
		"@rollup/plugin-node-resolve": "10.0.0",
		"@types/node": "14.14.9",
		"prettier": "2.2.0",
		"rollup": "2.33.3",
		"rollup-plugin-dts": "^1.4.14",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-typescript2": "0.29.0",
		"ts-node": "9.0.0",
		"typescript": "4.1.2",
		"uvu": "0.4.1"
	},
	"volta": {
		"node": "15.2.1",
		"yarn": "1.22.5"
	},
	"dependencies": {
		"kleur": "^4.1.3"
	}
}
