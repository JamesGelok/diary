{
	"name": "diary",
	"version": "0.0.6",
	"description": "Dear diary, fixed a bug today â€” glad I had logs!",
	"keywords": [
		"fast",
		"logging",
		"logger",
		"utility"
	],
	"repository": "maraisr/diary",
	"license": "MIT",
	"author": {
		"name": "Marais Rossouw",
		"email": "me@marais.dev",
		"url": "https://marais.io"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./lib/index.mjs",
			"require": "./lib/index.js"
		}
	},
	"main": "lib/index.js",
	"unpkg": "lib/index.min.js",
	"module": "lib/index.mjs",
	"types": "types/index.d.ts",
	"files": [
		"types",
		"lib"
	],
	"scripts": {
		"bench": "node -r ts-node/register bench/index.ts",
		"build": "rollup -c",
		"format": "prettier  --write --list-different \"{*,bench/**/*,.github/**/*}.+(ts|json|yml|md)\"",
		"prepublishOnly": "yarn build",
		"size": "bundlesize -f \"lib/*.{mjs,js}\"",
		"test": "uvu -r ts-node/register test",
		"typecheck": "tsc --noEmit"
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"devDependencies": {
		"@marais/tsconfig": "0.0.1",
		"@rollup/plugin-node-resolve": "11.0.1",
		"@types/benchmark": "2.1.0",
		"@types/node": "14.14.14",
		"benchmark": "2.1.4",
		"bundlesize": "^0.18.0",
		"debug": "^4.3.1",
		"pino": "^6.8.0",
		"prettier": "2.2.1",
		"rollup": "2.35.1",
		"rollup-plugin-dts": "^2.0.1",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-typescript2": "0.29.0",
		"ts-node": "9.1.1",
		"typescript": "4.1.3",
		"uvu": "0.5.1",
		"winston": "^3.3.3"
	},
	"volta": {
		"node": "15.5.0",
		"yarn": "1.22.5"
	}
}
